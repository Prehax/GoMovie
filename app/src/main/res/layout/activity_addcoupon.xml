<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">
    <TextView
        android:id="@+id/tv_couponname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Name: "
        android:textColor="#000000"
        android:textSize="16sp" />
        <EditText
            android:id="@+id/et_couponname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Enter Coupon Name"
            android:background="@drawable/et_style1"
            android:padding="10dp"
            android:layout_toRightOf="@+id/tv_couponname"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_couponid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupon ID: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_couponid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_couponid"
            android:background="@drawable/et_style1"
            android:hint="Enter Coupon Code"
            android:inputType="text"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/tv_coupondiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount: "
            android:textColor="#000000"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/et_coupondiscount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_coupondiscount"
            android:background="@drawable/et_style1"
            android:hint="Enter Coupon Discount"
            android:inputType="text"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_addcoupon1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_style1"
        android:text="Save Coupon"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="70dp" />

</LinearLayout>