<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_cvv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="CVV:"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/et_cvv1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/tv_cvv1"
        android:background="@drawable/et_style1"
        android:hint="Enter CVV/CCV"
        android:inputType="numberPassword"
        android:paddingEnd="10dp" />

    <Button
        android:id="@+id/btn_make"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_style1"
        android:text="Pay"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginBottom="100dp" />

</RelativeLayout>