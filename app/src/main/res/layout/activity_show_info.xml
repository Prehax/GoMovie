<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#263238"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name: "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_sinfo_Fname"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Test First Name"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name: "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_sinfo_Lname"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Test Last Name"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street Address: "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_sinfo_address"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Test Address"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City: "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_sinfo_city"
            android:layout_width="160dp"
            android:layout_height="36dp"
            android:text="Test City"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: "
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/tv_sinfo_state"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="TS"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postal Code: "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_sinfo_zip"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Test Zip"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to Theater(min): "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_sinfo_Time"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="13"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preference: "
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_pref"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="default"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:paddingEnd="10dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_sinfo_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:background="@drawable/btn_style1"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/btn_sinfo_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign to get Coupon"
        android:background="@drawable/btn_style1"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp" />

</LinearLayout>